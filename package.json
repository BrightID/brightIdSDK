{
  "name": "typescript-node-lib",
  "version": "0.0.0",
  "licence": "MIT",
  "author": {
    "name": "name",
    "email": "email@domain.com"
  },
  "main": "dist/index.js",
  "description": "your typescript library description",
  "keywords": [
    "typescript"
  ],
  "scripts": {
    "benchmarks": "ts-node benchmarks",
    "changelog": "standard-changelog",
    "clean": "rimraf dist",
    "docs": "npm run clean && typedoc --options typedoc.markdown.json",
    "lint": "eslint -c ./.eslintrc.json src/**/*.ts --fix",
    "prepublishOnly": "npm run clean && tsc -p tsconfig.npm.json",
    "size-limit": "npm run clean && tsc -p . && size-limit",
    "test": "jest",
    "upgrade-interactive": "npm-check --update"
  },
  "homepage": "https://github.com/yourname/yourrepo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/yourrepo.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "limit": "1 s",
      "webpack": false,
      "path": "dist/*.js"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.2.2",
    "@size-limit/time": "^2.2.2",
    "@types/benchmark": "^1.0.31",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.15",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "benchmark": "^2.1.4",
    "codecov": "^3.5.0",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "npm-check": "^5.9.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "standard-changelog": "^2.0.18",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typedoc": "^0.15.4",
    "typedoc-plugin-markdown": "^2.2.14",
    "typescript": "^3.7.3"
  }
}
